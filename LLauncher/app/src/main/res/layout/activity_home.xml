<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/hideButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide apps" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print details" />

    <Button
        android:id="@+id/hideSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hide settings" />

    <Button
        android:id="@+id/unhideSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unhide settings" />

    <Button
        android:id="@+id/disableADB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable  ADB" />
    <Button
        android:id="@+id/enableADB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enable ADB" />

    <TextView
        android:id="@+id/settingsStatusText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
